import argparse
import logging
import os.path
import sys

import factpp.rdflib
from rdflib import ConjunctiveGraph, Literal, BNode
from rdflib.namespace import FOAF

FILE_FORMAT = {
    'rdf': 'xml',
    'n3': 'n3',
}

logging.basicConfig(level=logging.DEBUG)

parser = argparse.ArgumentParser()
parser.add_argument(
    '-v', '--verbose', dest='verbose', help='Make a bunch of noise',
    action='store_true'
)
parser.add_argument('input', nargs='+', help='Ontology files')

args = parser.parse_args()
            
g = ConjunctiveGraph(store=factpp.rdflib.Store())
for fn in args.input:
    format = FILE_FORMAT.get(os.path.splitext(fn)[1][1:])
    if not format:
        print('factpp-load: unknown file format for file {}'.format(fn))
        sys.exit(1)
    g.parse(fn, format=format)

# vim: sw=4:et:ai
